<div class="pet-panel panel-primary ">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @pet.name %></h3>
  </div>
  <div class="pet-info">
    <div class="row">

      <div class="col-md-3 col-lg-3 " align="center"> <img alt="Pet Pic" src="<%= @pet.image %>" class="show-pet img-responsive"> </div>
      <div class=" col-md-9 col-lg-9 ">
        <table class="table table-pet-information">
          <tbody>
            <tr>
              <td>Name:</td>
              <td><%= @pet.name %></td>
            </tr>
            <tr>
              <td>Breed:</td>
              <td><%= @pet.dog_breed.name %></td>
            </tr>
            <tr>
              <td>Gender:</td>
              <td><%= @pet.gender %></td>
            </tr>
            <tr>
              <td>State:</td>
              <td><%= @pet.city.state.name %></td>
            </tr>
            <tr>
              <td>City:</td>
              <td><%= @pet.city.name %></td>
            </tr>
            <tr>
              <td>Description:</td>
              <td><%= @pet.description %></td>
            </tr>
            <tr>
              <td>Owner's Name:</td>
              <td><%= @pet.user.name %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><a href="mailto:<%= @pet.user.email %>"><%= @pet.user.email %></a></td>
            </tr>
          </tbody>
        </table>

        <% if @pet.user_id == session[:user_id] %>
          <form class="" action="index.html" method="post">
            <a href="/pet_edit/<%= @pet.id %>" class="btn btn-warning btn-petinfo"><span class="glyphicon glyphicon-edit"></span> Edit</a>
          </form>
          <form class="" action="/pet/<%= @pet.id %>/delete" method="post">
            <input id="hidden" type="hidden" name="_method" value="delete">
            <button class="btn btn-danger btn-petinfo"><span class="glyphicon glyphicon-remove"></span> Delete</button>
          </form>
          <form class="" action="/search/result" method="get">
            <input type="hidden" name="city" value="<%= @pet.city_id %>">
            <input type="hidden" name="species" value="<%= @pet.species %>">
            <input type="hidden" name="breed" value="<%= @pet.dog_breed_id %>">
            <% if @pet.gender == 'male' %>
              <input type="hidden" name="gender" value="female">
            <% else %>
              <input type="hidden" name="gender" value="male">
            <% end %>

            <button class="btn btn-success btn-petinfo">Search Match</button>
          </form>
        <% else %>
          <form  class="" action="/match/add" method="post">
            <input type="hidden" name="pet_match" value="<%= @pet.id %>">
            <button class="btn btn-success btn-petinfo">Save Match</button>
          </form>
        <% end %>
        <button onclick="goBack()" class="btn btn-info btn-petinfo"><span class="glyphicon glyphicon-chevron-left"></span>Go Back</button>
      </div>
    <!-- div row -->
    </div>
  <!-- panel body -->
  </div>

<!-- <div class="panel panel-info"> -->
</div>
<script>
function goBack() {
    window.history.back();
}
</script>
